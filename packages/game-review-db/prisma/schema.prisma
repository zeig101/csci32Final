// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  user_id        String    @id @default(cuid())//all the ids use the modelname_id because it makes the service easier to read
  name           String
  email          String?
  reviews        Review[]
}

model Genre {
  genre_id    String @id @default(cuid())
  name        String @unique
  games       Game[] @relation("GameToGenre")
}

model Game {
  game_id        String   @id @default(cuid())
  title          String   @unique
  genres         Genre[]  @relation("GameToGenre")
  reviews        Review[]
  entryDate      DateTime @default(now())
  releaseDate    DateTime?
}

model Review {
  review_id      String   @id @default(cuid())
  rating         Int      @default(0)
  game_id        String
  game           Game     @relation(fields: [game_id], references: [game_id])
  date           DateTime @default(now())
  user_id        String
  user           User     @relation(fields: [user_id], references: [user_id])

  @@unique([user_id, game_id])
}
